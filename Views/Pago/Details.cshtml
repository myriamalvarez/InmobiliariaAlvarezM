@model InmobiliariaAlvarezM.Models.Pago

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles del pago</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Codigo Pago
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdPago)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Importe)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Importe)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaDePago)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaDePago)
        </dd>
        <dt class="col-sm-2">
            Codigo Contrato
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdContrato)
        </dd>
        <dt class="col-sm-2">
            Inquilino
        </dt>
        <dd class="col-sm-10">
            @(Model.Contrato.Inquilino.Nombre + " " + Model.Contrato.Inquilino.Apellido)
        </dd>
        <dt class="col-sm-2">
            Direccion del Inmueble
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contrato.Inmueble.Direccion)
        </dd>

    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new { id = Model.IdPago }) |
    <a asp-action="Index">Volver al listado</a>
</div>
