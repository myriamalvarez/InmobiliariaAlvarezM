@model InmobiliariaAlvarezM.Models.Pago

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Pago</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Codigo Pago
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdPago)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Importe)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Importe)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaDePago)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaDePago)
        </dd>
        <dt class="col-sm-2">
            Condigo Contrato
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdContrato)
        </dd>
        <dt class="col-sm-2">
            Estado Contrato
        </dt>
        <dd class="col-sm-10">
            @TempData["Estado"]

        </dd>
        <dt class="col-sm-2">
            Codigo Inquilino
        </dt>
        <dd class="col-sm-10">
            @Model.Contrato.Inquilino.IdInquilino
        </dd>
        <dt class="col-sm-2">
            Inquilino
        </dt>
        <dd class="col-sm-10">
            @(Model.Contrato.Inquilino.Nombre + " " + Model.Contrato.Inquilino.Apellido)
        </dd>
        <dt class="col-sm-2">
            Codigo Inmueble
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contrato.Inmueble.IdInmueble)
        </dd>
        <dt class="col-sm-2">
            Direccion del Inmueble
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contrato.Inmueble.Direccion)
        </dd>

    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new { id = Model.IdPago, returnUrl = TempData["returnUrl"] }) |
    <a href="@TempData["returnUrl"]">Volver</a>
</div>
